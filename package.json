{
  "name": "pizi-server-app",
  "version": "1.0.0",
  "description": "",
  "main": "dist/ssr/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build_client": "webpack --env NODE_ENV=production",
    "build_ssr": "tsc -p ./tsconfig.ssr.json",
    "build": "npm run build_ssr && npm run build_client",
    "build_watch": "webpack --env NODE_ENV=production --watch --progress",
    "deploy": "docker cp dist/client/. pizi-express-server-pizi-server-1:/pizi-server/server-app && docker cp dist/. pizi-express-server-pizi-server-1:/pizi-server/node_modules/pizi-server-app/dist && docker restart pizi-express-server-pizi-server-1",
    "buildStat": "webpack --env NODE_ENV=production --json > stats.json",
    "buildDeploy": "npm run build && npm run deploy",
    "clear_modules": "rm -f ./package-lock.json && rm -rf ./node_modules",
    "reinstall_modules": "npm run clear_modules && npm install",
    "update_pizi_react": "rm -f ./package-lock.json && rm -rf ./node_modules/pizi-react && npm install pizi-react",
    "deploy_watch": "npm-watch"
  },
  "watch": {
    "deploy": "dist"
  },
  "author": "Manuel-Pi",
  "license": "ISC",
  "devDependencies": {
    "@types/jwt-decode": "^3.1.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "file-loader": "^6.2.0",
    "less-loader": "^12.2.0",
    "mini-css-extract-plugin": "^2.7.7",
    "npm-watch": "^0.11.0",
    "null-loader": "^4.0.1",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "pizi-react": "github:Manuel-Pi/pizi-react"
  }
}
